# ===========================================
# Environment Variables Template
# Copy this file to .env.local and fill in your values
# ===========================================

# ===========================================
# Supabase - Get from: https://supabase.com/dashboard
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SECRET_KEY=your_service_role_key_here

# ===========================================
# Tavus - Get from: https://platform.tavus.io
# ===========================================
TAVUS_API_KEY=your_tavus_api_key_here
TAVUS_BASE_URL=https://api.tavus.io
TAVUS_REPLICA_ID=your_replica_id_here
TAVUS_LLM_MODEL=gpt-4o
TAVUS_TOOLS_ENABLED=true
TAVUS_MINIMAL_TOOLS=false

# Tavus Webhook
NEXT_PUBLIC_TAVUS_WEBHOOK_TOKEN=your_webhook_token_here
TAVUS_WEBHOOK_SECRET=your_webhook_secret_here
TAVUS_WEBHOOK_TOKEN=your_webhook_token_here

# ===========================================
# Twelve Labs - Get from: https://dashboard.twelvelabs.io
# ===========================================
TWELVE_LABS_API_KEY=your_twelve_labs_api_key_here

# ===========================================
# OpenAI (optional) - Get from: https://platform.openai.com
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ===========================================
# App Configuration
# ===========================================
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Debug options (set to true to enable)
DEBUG_LOG=false
NEXT_PUBLIC_DEBUG_DAILY=false
NEXT_PUBLIC_TAVUS_TOOLCALL_TEXT_FALLBACK=true

# ===========================================
# Sentry (optional) - Get from: https://sentry.io
# ===========================================
# SENTRY_DSN=
# NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_TRACES_SAMPLE_RATE=0.1
# SENTRY_PROFILES_SAMPLE_RATE=0.1

# ===========================================
# ElevenLabs (optional) - Get from: https://elevenlabs.io
# ===========================================
# ELEVENLABS_API_KEY=
# ELEVENLABS_URL=

# ===========================================
# Mixpanel Analytics - Get from: https://mixpanel.com
# ===========================================
# NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token_here

# ===========================================
# HubSpot CRM - Get from: https://developers.hubspot.com
# ===========================================
# HUBSPOT_API_KEY=your_hubspot_private_app_token_here
